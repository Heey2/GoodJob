package com.goodjob.test;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;
import java.util.ArrayList;

import com.goodjob.Company;
import com.test.util.DBUtil;

import lombok.Data;

public class TestDAO {
	private Connection conn;
	private Statement stat;
	private PreparedStatement pstat;
	private ResultSet rs;

	public TestDAO() {
		this.conn = DBUtil.open();
	}

	public ArrayList<String> list() {
		try {
			String sql = "select cp_name from tblcompany";

			stat = conn.createStatement();
			rs = stat.executeQuery(sql);

			ArrayList<String> list = new ArrayList<>();
			while (rs.next()) {
				list.add(rs.getString("cp_name"));
			}
			return list;

		} catch (Exception e) {
			System.out.println("TestDAO.list");
			e.printStackTrace();
		}
		return null;
	}

	public int addCode(Company company) {
		try {
			String sql = "insert into tblCode values (?,?)";

			pstat = conn.prepareStatement(sql);
			
			pstat.setString(1, company.getCode());
			pstat.setString(2, company.getName());
			
			pstat.executeUpdate();
			pstat.close();
			return 1;
			
		} catch (Exception e) {
			System.out.println("TestDAO.addCode");
			e.printStackTrace();
		}
		return 0;
	}
	
}